# nginx.default

server {
    listen 8000;
    server_name example.org;

    location / {
        proxy_pass http://0.0.0.0:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
    location /static/ {
        alias /public/static/ ;
    }
}